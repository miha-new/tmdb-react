{
  "version": 3,
  "builds": [
    {
      "src": "vite.config.js",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/route.js",
      "use": "@vercel/edge"
    }
  ],
  "routes": [
    {
      "src": "/api/.*",
      "dest": "api/route.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}